<AssignMessage name="AM-RedirectToLoginApp">
  <AssignVariable>
    <Name>domain-for-login-endpoint</Name>
    <Value>09a0-50-35-230-49.ngrok.io</Value>
  </AssignVariable>
  <AssignVariable>
    <Name>tenant-id</Name>
    <Value>5gdev</Value>
  </AssignVariable>
  <AssignVariable>
    <Name>login_endpoint</Name>
    <Template>https://{domain-for-login-endpoint}/tenants/{tenant-id}/login?sessionid={messageid}</Template>
  </AssignVariable>
  <Set>
    <Headers>
      <Header name="Location">{login_endpoint}</Header>
    </Headers>
    <Payload contentType="text/plain">{login_endpoint}</Payload>
    <StatusCode>302</StatusCode>
    <ReasonPhrase>Found</ReasonPhrase>
  </Set>

  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>

</AssignMessage>
