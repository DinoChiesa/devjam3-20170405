<AssignMessage name="AM-RedirectToLoginApp">
  <Set>
    <Headers>
      <Header name="Location">
        https://{request.header.Host}{proxy.basepath}/../login-and-consent/login?sessionid={messageid}
      </Header>
    </Headers>
    <Payload contentType="text/plain">https://{request.header.Host}{proxy.basepath}/../login-and-consent/login?sessionid={messageid}</Payload>
    <StatusCode>302</StatusCode>
    <ReasonPhrase>Found</ReasonPhrase>
  </Set>

  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
  <AssignTo createNew="false" transport="http" type="response" />
</AssignMessage>
