<AssignMessage name="AM-Redirect-To-Login-App">
  <AssignVariable>
    <Name>login_endpoint</Name>
    <Template>https://{propertyset.settings.domain-for-login-endpoint}/tenants/{propertyset.settings.tenant-id}/login?sessionid={messageid}</Template>
  </AssignVariable>
  <Set>
    <Headers>
      <Header name="Location">{login_endpoint}</Header>
    </Headers>
    <Payload contentType="text/plain">{login_endpoint}</Payload>
    <StatusCode>302</StatusCode>
    <ReasonPhrase>Found</ReasonPhrase>
  </Set>

  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>

</AssignMessage>
