<OAuthV2 name="OAuthV2-GenerateAccessToken-Implicit">
  <ExternalAuthorization>false</ExternalAuthorization>
  <Operation>GenerateAccessTokenImplicitGrant</Operation>
  <SupportedGrantTypes/>
  <Scope>req_scope</Scope>
  <ClientId>client_id</ClientId>
  <ResponseType>token</ResponseType>
  <ExpiresIn>600000</ExpiresIn>
  <Attributes>
    <Attribute name="sessionid" ref="sessionid" display="true"/>
    <Attribute name="scope" ref="req_scope" display="true"/>
    <Attribute name="roles" ref="roles" display="true"/>
    <Attribute name="subject" ref="sub" display="true"/>
  </Attributes>
  <UserName>sub</UserName>
</OAuthV2>
