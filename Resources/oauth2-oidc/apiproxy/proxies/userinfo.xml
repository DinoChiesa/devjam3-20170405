<ProxyEndpoint name="userinfo">
    <Description/>
    <HTTPProxyConnection>
        <BasePath>/apijam-oidc/userinfo</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Verify-Access-Token</Name>
            </Step>
            <Step>
                <Name>SC-Get-User-Details</Name>
            </Step>
            <Step>
                <Name>Extract-User-Info</Name>
            </Step>
        </Request>
        <Response>
            <Step>
                <Name>JS-BuildUserInfoResponse</Name>
            </Step>
            <Step>
                <Name>AM-UserInfo-Response</Name>
            </Step>
        </Response>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <RouteRule name="noroute"/>
</ProxyEndpoint>
